                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Fill="{StaticResource MainColor}" x:Name="path_iconApplications" Stretch="Fill"  
