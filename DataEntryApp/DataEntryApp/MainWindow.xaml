                    </Button>
                    <Button Grid.Column="11" x:Name="BTN_Close" Click="BTN_Close_Click"  
                Margin="5,10,5,10" ToolTip="Close" 
                    Background="{x:Null}" BorderBrush="{x:Null}" Width="25" Height="25" 
                    Padding="0" >
